<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/policy_feedback_margin"
        android:layout_marginTop="@dimen/policy_feedback_margin"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_target"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="目标"
            android:textColor="@color/pink_primary" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="title"
            android:textColor="@color/black"
            android:textSize="@dimen/exploration_title_size" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_process"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="process"
        android:textColor="@color/grey_primary_dark"
        android:textSize="@dimen/exploration_process_size" />

    <include layout="@layout/subfragment_share_like_num" />

</LinearLayout>