<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/outcome_pad"
    android:layout_width="200dp"
    android:layout_height="wrap_content"

    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="你对这次套路满意吗"
        android:layout_margin="@dimen/policy_feedback_margin"
        android:gravity="center"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_happy"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_happy_big"
                android:layout_margin="@dimen/policy_feedback_margin"
                android:layout_gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_sad"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_sad_big"
                android:layout_margin="@dimen/policy_feedback_margin"
                android:layout_gravity="center"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>

